<?xml version="1.0" encoding="utf-8"?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- solid指定形狀的填充色，只有android:color一個屬性 -->
    <solid android:color="#E4007F" />
    <!-- padding設置內間距 -->
    <padding
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp" />
    <!-- size設置形狀的大小 -->
    <size
        android:width="40dp"
        android:height="40dp" />
</shape>