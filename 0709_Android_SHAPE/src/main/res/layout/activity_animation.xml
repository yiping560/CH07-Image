<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:padding="@dimen/Spacing"
    tools:context=".AnimationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/m0708_b0101"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/bg_btn_normal"
            android:onClick="onFadeIn"
            android:text="@string/m0709_b0101"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/m0708_b0102"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/bg_btn_normal"
            android:onClick="onFadeOut"
            android:text="@string/m0709_b0102"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:contentDescription="@string/m0709_descr"
                android:onClick="onZoomIn"
                android:src="@mipmap/ic_launcher"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:contentDescription="@string/m0709_descr"
                android:onClick="onZoomOut"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:contentDescription="@string/m0709_descr"
                android:onClick="onMoveLeft2Right"
                android:src="@mipmap/ic_launcher" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="8dp"
                android:contentDescription="@string/m0709_descr"
                android:onClick="onMoveInFromBottom"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:contentDescription="@string/m0709_descr"
            android:onClick="onRotate"
            android:src="@drawable/bg_ring_with_gradient"
            tools:ignore="ImageContrastCheck" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:contentDescription="@string/m0709_descr"
            android:onClick="onMoveAndScale"
            android:src="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/m0708_b0103"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_normal"
            android:onClick="onValueAnimatorTest"
            android:text="@string/m0709_b0100"
            android:textColor="@android:color/white"
            tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

        <Button
            android:id="@+id/m0709_b0104"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_btn_normal"
            android:onClick="onObjectAnimatorTest"
            android:text="@string/m0709_b0100"
            android:textColor="@android:color/white"
            tools:ignore="TextContrastCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/m0709_b0105"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_btn_normal"
            android:onClick="onAnimatorSetTest"
            android:text="@string/m0709_b0100"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>
