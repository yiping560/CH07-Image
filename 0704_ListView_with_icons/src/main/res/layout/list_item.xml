<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/m0704_im01"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="1dp"
        android:background="@color/Teal"
        android:contentDescription="@string/descr"
        android:padding="@dimen/p10"
        android:scaleType="matrix"
        tools:srcCompat="@drawable/img01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/Teal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/m0704_item_t01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="@string/m0704_t001"
            android:textSize="@dimen/fontsize"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/m0704_item_t02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:text="@string/m0704_t002"
            android:textSize="@dimen/fontsize"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>

</LinearLayout>